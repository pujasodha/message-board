<%= form_with model: post, local: true do |form| %>
 <% if post.errors.any? %>
    <div style="color: red">
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: 'px-4 pt-5 text-gray-600' %>
    <div class = "w-full md:w-full px-3">
      <%= form.text_field :title, class: 'bg-gray-100 rounded border border-gray-400 leading-normal resize-none w-full py-2 px-3 font-medium focus:outline-none focus:bg-white' %>
    </div>
  </div>

  <div>
    <%= form.label :message, class: 'px-4 pt-5 text-gray-600' %>
    <div class = "w-full md:w-full px-3">
      <%= form.text_area :message , class: 'bg-gray-100 rounded border border-gray-400 leading-normal resize-none w-full h-52 py-2 px-3 focus:outline-none focus:bg-white'  %>
    </div>
  </div>

  <div class=' text-sm text-center py-4 px-5 -mx-3 -mb-2 rounded-b-lg'>
    <%= form.submit class: 'bg-blue-500 hover:bg-blue-700 text-white py-1 px-4 border border-gray-400 rounded-lg tracking-wide mr-1' %>
  </div>
<% end %>