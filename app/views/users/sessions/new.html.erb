<div class="grid min-h-screen place-items-center">
  <div class="w-11/12 p-12 bg-white sm:w-8/12 md:w-1/2 lg:w-5/12">
    <div class= 'text-xl font-semibold'>Log in</div>

    <div class='mt-6"'>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field py-3 mt-2">
          <%= f.label :email, class:'text-xs font-semibold text-gray-600 uppercase' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'janedoe@gmail.com', class: 'block w-full mt-2 text-gray-700 bg-gray-100 appearance-none focus:outline-none focus:bg-white focus:shadow-inner' %>
        </div>

        <div class="field py-3 mt-2">
          <%= f.label :password, class: 'text-xs font-semibold text-gray-600 uppercase' %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "******", class: 'block w-full p-3 text-gray-700 bg-gray-100 appearance-none focus:outline-none focus:bg-white focus:shadow-inner' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me, class: 'form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-blue-600 checked:border-blue-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer' %>
            <%= f.label :remember_me, class: 'text-xs font-semibold text-gray-600 uppercase' %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: 'w-full py-3 mt-6 font-medium tracking-widest text-white uppercase bg-blue-500 shadow-lg focus:outline-none hover:bg-blue-700 hover:shadow-none' %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>