<div class="grid min-h-screen place-items-center">
  <div class="w-11/12 p-12 bg-white sm:w-8/12 md:w-1/2 lg:w-5/12">
    <div class= 'text-xl font-semibold'>Sign up</div>
      <div class="mt-6">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field py-3 mt-2">
          <%= f.label :name, class: 'text-xs font-semibold text-gray-600 uppercase' %><br />
          <%= f.text_field :name, autofocus: true, placeholder: 'Jane Doe', class: 'block w-full p-3 mt-2 text-gray-700 bg-gray-100 appearance-none focus:outline-none focus:bg-white focus:shadow-inner' %>
        </div>
        </div>

        <div class="field py-3 mt-2">
          <%= f.label :email, class: 'text-xs font-semibold text-gray-600 uppercase' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'janedoe@gmail.com', class: 'block w-full p-3 text-gray-700 bg-gray-100 appearance-none focus:outline-none focus:bg-white focus:shadow-inner'  %>
        </div>

        <div class="field py-3 mt-2">
          <%= f.label :password, class: 'text-xs font-semibold text-gray-600 uppercase' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "******", class: 'block w-full p-3 text-gray-700 bg-gray-100 appearance-none focus:outline-none focus:bg-white focus:shadow-inner' %>
        </div>

        <div class="field py-3 mt-2">
          <%= f.label :password_confirmation, class: 'text-xs font-semibold text-gray-600 uppercase' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "******", class: 'block w-full p-3 text-gray-700 bg-gray-100 appearance-none focus:outline-none focus:bg-white focus:shadow-inner' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'w-full py-3 mt-6 font-medium tracking-widest text-white uppercase bg-blue-500 shadow-lg focus:outline-none hover:bg-blue-700 hover:shadow-none' %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>