<div class="w-full pb-5 shadow-sm space-y-5 py-5 px-2">
  <div class="flex justify-between items-center">
    <span class="font-light text-gray-600 px-4">
      <%= comment.user.name %><br />
    </span>
    <span class="text-left font-light text-gray-600">
      Posted <%= time_ago_in_words(comment.created_at) %> ago
    </span>
  </div>

  <div class="mt-2 text-gray-600 px-4">
    <div id="comment-body">
      <%= comment.body %>
    </div>
  </div>

  <div class="flex justify-end mt-4">
    <% if current_user == comment.user %>
      <%= button_to "Delete", [post, comment], method: :delete, class: "flex mr-2 text-gray-700 text-sm text-blue-600 hover:underline" %>
    <% end %>
  </div>
</div>
